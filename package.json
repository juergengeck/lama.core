  "license": "MIT",
  "private": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "node-fetch": "^2.7.0"
  },
  "peerDependencies": {
    "@refinio/one.core": "*",
    "@refinio/one.models": "*",
    "@chat/core": "*"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^8.0.2",
    "@types/passport-http": "^0.3.11",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "typescript": "^5.7.2"
  }
