{
  "name": "@lama/core",
  "version": "1.0.0",
  "description": "LAMA Core - Shared business logic handlers and services",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "find . -name '*.js' -not -path './node_modules/*' -delete"
  },
  "exports": {
    "./plans/*": "./dist/lama.core/plans/*",
    "./services/*": "./dist/lama.core/services/*",
    "./models/*": "./dist/lama.core/models/*",
    "./one-ai/*": "./dist/lama.core/one-ai/*",
    "./ai/*": "./dist/lama.core/ai/*",
    "./constants/*": "./dist/lama.core/constants/*",
    "./initialization/*": "./dist/lama.core/initialization/*"
  },
  "author": "lama.one Team",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "node-fetch": "^2.7.0"
  },
  "peerDependencies": {
    "@refinio/one.core": "*",
    "@refinio/one.models": "*",
    "@chat/core": "*",
    "@mcp/core": "*"
  },
  "devDependencies": {
    "@types/chai-as-promised": "^8.0.2",
    "@types/passport-http": "^0.3.11",
    "@types/qrcode": "^1.5.6",
    "@types/ws": "^8.18.1",
    "typescript": "^5.7.2"
  }
}
