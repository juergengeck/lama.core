  "license": "MIT",
  "private": true,
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "node-fetch": "^2.7.0"
  },
  "peerDependencies": {
    "@refinio/one.core": "*",
    "@refinio/one.models": "*"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
