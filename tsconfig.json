{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "declaration": true,
    "strict": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@refinio/*": ["./packages/*"],
      "@anthropic-ai/*": ["../lama.browser/node_modules/@anthropic-ai/*"],
      "@chat/core/*": ["../chat.core/dist/types/*", "../chat.core/*"],
      "@connection/core/*": ["../connection.core/dist/types/*", "../connection.core/*"],
      "@trust/core/*": ["../trust.core/*"],
      "@memory/core/*": ["../memory.core/src/*"],
      "@mcp/core": ["../mcp.core/dist"],
      "@cube/core": ["../../node_modules/@cube/core/dist"],
      "@refinio/api/*": ["../../node_modules/@refinio/api/dist/*"]
    }
  },
  "include": ["ai/**/*.ts", "constants/**/*.ts", "plans/**/*.ts", "models/**/*.ts", "services/**/*.ts", "one-ai/**/*.ts", "recipes/**/*.ts", "initialization/**/*.ts", "ui/**/*.ts", "ui/**/*.tsx", "*.d.ts"],
  "exclude": ["node_modules", "**/*.js", "packages/**", "dist/**"]
}
