{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "strict": false,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@refinio/*": ["./packages/*"],
      "@anthropic-ai/*": ["../lama.browser/node_modules/@anthropic-ai/*"]
    }
  },
  "include": ["handlers/**/*.ts", "models/**/*.ts", "one-ai/**/*.ts", "services/**/*.ts", "recipes/**/*.ts", "*.d.ts"],
  "exclude": ["node_modules", "**/*.js", "packages/**", "dist/**"]
}
